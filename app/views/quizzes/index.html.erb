<div class="wrapper">
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <div class="col-lg-10 offset-lg-1">
      <%= render 'shared/quiz_search_form', q: @q, url: quizzes_path %>
    </div>
    </div>
  </div>

  <!-- Quiz一覧 -->
<%= turbo_frame_tag "list" do %>
  <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th class="header1">Quizタイトル</th>
      <th class="header2">学習日</th>
      <th class="header3">タグ</th>
      <th class="header4">復習した回数</th>
      <th class="header5">ステータス</th>
    </tr>
  </thead>

  <tbody>
      <% if @quizzes.present? %>
        <%= render partial: 'quiz', collection: @quizzes %>
      <% else %>
        <div class="mb-3">Quizがありません</div>
      <% end %>
  </tbody>
<% end %>
</div>
