<div class="wrapper">
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <%= render 'shared/search_form', q: @q, url: learning_histories_path %>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th class="header1">タイトル</th>
      <th class="header2">学習日</th>
      <th class="header3">タグ</th>
      <th class="header4">復習した回数</th>
      <th class="header5">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% if @learning_histories.present? %>
      <%= render @learning_histories %>
    <% else %>
      <div class="mb-3">学習記録がありません</div>
    <% end %>
  </tbody>
</div>
