<div class='wrapper'>
  <div class="container mt-5">
    <h1 class="text-center mb-4"><%= "学習記録詳細" %></h1>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <div class="card mb-4">
          <div class="card-body">
            <h3 class="card-title"><%= @learning_history.title %></h3></br>
            <div class="card-text">
              <%= markdown(@learning_history.content) %>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">学習時間</h5>
            <p class="card-text"><%= @learning_history.hour %></p>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">画像</h5>
            <% if @learning_history.image? %>
            <p class="card-text"><%= image_tag @learning_history.image_url, width: "822", height:"500" %></p>
            <% end %>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">タグ</h5>
            <% @learning_history.tags.each do |tag| %>
              <%= tag.name %>
            <% end %>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Quizタイトル</h5>
            <p class="card-text"><%= @learning_history.quiz.title %></p>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Quiz詳細</h5>
            <p class="card-text"><%= markdown(@learning_history.quiz.content) %></p>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to '編集', edit_learning_history_path(@learning_history), class: 'btn btn-primary ml-3' %>
        <%= link_to '削除', learning_history_path(@learning_history), data: { turbo_method: :delete, turbo_confirm: '学習記録を削除しますか?(Quizも同時に削除されます)' }, class: 'btn btn-danger ms-3' %>
      </div>
    </div>
  </div>
</div>
